    <div class="container">
        <header>
            <h1>IPv6Gen.net</h1>
            <button class="icon-btn" onclick="toggleTheme()" id="themeBtn">☀</button>
        </header>

        <div class="panel controls">
            <div>
                <label>Prefix / Subnet</label>
                <input type="text" id="prefix" value="2001:db8" spellcheck="false">
                <div class="chips">
                    <span class="chip" onclick="setPfx('fe80')">Link-Local</span>
                    <span class="chip" onclick="setPfx('fd00')">ULA (Priv)</span>
