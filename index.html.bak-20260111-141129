<script>
    const LOGIC = {
        leet: { 'o':'0', 'i':'1', 'l':'1', 'z':'2', 'r':'2', 'e':'3', 'a':'4', 's':'5', 'g':'6', 'b':'8', 't':'7', 'q':'9' },
        creative: { 'h':'11', 'j':'1', 'k':'c', 'm':'aa', 'n':'17', 'p':'9', 'u':'c', 'v':'c', 'w':'33', 'x':'8', 'y':'7' }
    };

    const ui = { 
        pfx: document.getElementById('prefix'), inp: document.getElementById('input'), 
        res: document.getElementById('results'), themeBtn: document.getElementById('themeBtn'),
        expanded: document.getElementById('expandedMode')
    };

    let theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark');

    const escape = s => s ? s.toString().replace(/[&<>"']/g, "") : "";
    const toHex = s => s.split('').map(c => c.charCodeAt(0).toString(16)).join('');
    const chunk = w => w.match(/.{1,4}/g)?.join(':') || w;

    function transform(text, creative) {
        const words = text.split(/\s+/).filter(w => w.length > 0);
        let htmlParts = [], rawParts = [], valid = true;

        words.forEach(word => {
            let wordRaw = "", wordHtml = "";
            for (let char of word.toLowerCase()) {
                let mapped = null, type = 'val';
                if (/[0-9a-f]/.test(char)) mapped = char;
                else if (LOGIC.leet[char] !== undefined) mapped = LOGIC.leet[char];
                else if (creative && LOGIC.creative[char] !== undefined) { mapped = LOGIC.creative[char]; type = 'creative'; }
                
                if (mapped !== null) { 
                    wordRaw += mapped; 
                    wordHtml += `<span class="${type}">${escape(mapped)}</span>`; 
                } else { 
                    wordRaw += "0"; 
                    wordHtml += `<span class="err">${escape(char)}</span>`; 
                    valid = false; 
                }
            }
            rawParts.push(chunk(wordRaw));
            htmlParts.push(wordHtml); 
        });
        return { html: htmlParts.join('<span class="sep">:</span>'), raw: rawParts.join(':'), valid };
    }

    function render() {
        const txt = ui.inp.value;
        let pfx = ui.pfx.value.replace(/[^0-9a-fA-F:]/g, '').replace(/:+$/, '') || '2001:db8';
        
        const variants = [];
        if(txt) {
            const strict = transform(txt, false);
            variants.push({ type:'Strict Hexspeak', html: strict.html, raw: strict.raw, valid: strict.valid });

            const creative = transform(txt, true);
            if(creative.raw !== strict.raw || (!strict.valid && creative.valid)) {
                 variants.push({ type:'Creative Mappings', html: creative.html, raw: creative.raw, valid: creative.valid });
            }

            const asciiRaw = chunk(toHex(txt));
            variants.push({ type:'ASCII Bytes', html: `<span class="val">${asciiRaw}</span>`, raw: asciiRaw, valid: true });
        }

        ui.res.innerHTML = variants.map(v => {
            const joiner = ui.expanded.checked ? ':' : '::';
            const full = `${pfx}${joiner}${v.raw}`;
            return `
            <div class="card" onclick="copy('${full}')">
                <div class="card-head">
                    <span>${v.type}</span>
                    ${!v.valid ? '<span style="color:var(--err)">Invalid</span>' : ''}
                </div>
                <div class="addr"><span class="pfx-part">${escape(pfx)}${joiner}</span>${v.html}</div>
                <div class="tools">
                    <button class="btn-tool" onclick="event.stopPropagation(); copy('${full}')">Copy IP</button>
                    <button class="btn-tool" onclick="event.stopPropagation(); copyCmd('${full}')">Linux Cmd</button>
                </div>
            </div>`;
        }).join('') || '<div style="text-align:center; padding:2rem; opacity:0.5">Type to forge...</div>';

        const params = new URLSearchParams({pfx, txt});
        window.history.replaceState({}, '', `?${params}`);
    }

    window.setPfx = (v) => { ui.pfx.value = v; render(); };
    window.setInput = (v) => { ui.inp.value = v; render(); };
    window.copy = (v) => { navigator.clipboard.writeText(v); showToast("Address Copied!"); };
    window.copyCmd = (v) => { navigator.clipboard.writeText(`ip -6 addr add ${v}/64 dev eth0`); showToast("Command Copied!"); };

    function showToast(msg) {
        const t = document.getElementById('toast');
        t.innerText = msg; t.className = "show"; setTimeout(() => t.className = "", 2000);
    }

    window.toggleTheme = () => {
        theme = theme === 'dark' ? 'light' : 'dark';
        document.documentElement.setAttribute('data-theme', theme);
        ui.themeBtn.innerText = theme === 'dark' ? '☀' : '☾';
        localStorage.setItem('theme', theme);
    };

    document.documentElement.setAttribute('data-theme', theme);
    ui.themeBtn.innerText = theme === 'dark' ? '☀' : '☾';
    const params = new URLSearchParams(window.location.search);
    if(params.has('pfx')) ui.pfx.value = params.get('pfx');
    if(params.has('txt')) ui.inp.value = params.get('txt');
    [ui.pfx, ui.inp].forEach(e => e.addEventListener('input', render));
    render();
</script>
</body>
</html>