                    Vanity Phrase
                    <label class="switch">
                        <input type="checkbox" id="expandedMode" onchange="render()">
                        <span class="slider"></span> Expanded
                    </label>
                </label>
                <input type="text" id="input" placeholder="dead beef cafe" maxlength="32" autofocus spellcheck="false">
                <div class="chips">
                    <span class="chip" onclick="setInput('coffee')">coffee</span>
                    <span class="chip" onclick="setInput('bad code')">bad code</span>
                    <span class="chip" onclick="setInput('face feed')">face feed</span>
                </div>
            </div>
        </div>

        <div id="results"></div>

